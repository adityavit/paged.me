# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

#import crud routes.
*       /admin                                  module:crud

#import secure routes.
*       /                                       module:secure

#static routes for quick style tests.
GET     /quick                                  Application.quick

#teeziner routes
POST    /addinfo                                Application.info
POST    /addfolio                               Application.addfolio
POST    /addstyle                               Application.addStyle
POST    /updatestyle                            Application.updateStyle

GET     /                                       Application.index
GET     /allteez                                Application.allTeez
GET     /allteeziners                           Application.allTeeziners
GET     /challenge                              Application.challenge

GET     /{folioname}                            Application.folio
GET     /{folioname}/all                        Application.folioall
GET     /{folioname}/resume                     Application.resume
GET     /{folioname}/showcase                   Application.showcase

#catch all
*       /{controller}/{action}                  {controller}.{action}
